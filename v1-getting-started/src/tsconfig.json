{
    "compilerOptions": {
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "mapRoot": "./",
      "module": "es6",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noImplicitAny": false,
      "outDir": "../dist/out-tsc",
      "sourceMap": true,
      "target": "es5",
      "typeRoots": [
        "../node_modules/@types"
      ],
      "types": [
        "core-js"
      ],
      "lib": [
        "es2016",
        "dom"
      ]
    },
    "compileOnSave": true,
    "exclude": [
      "node_modules/*",
      "**/*-aot.ts",
      "**/*.spec.ts"
    ]
  }